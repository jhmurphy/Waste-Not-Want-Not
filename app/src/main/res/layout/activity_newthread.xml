<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team42.sg_3.wastenotwantnot.newThreadActivity">

    <Button
        android:id="@+id/submitThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Submit New Thread"
        android:onClick="onSubmit"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/threadDescription"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/cancelThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Cancel"
        android:onClick="onCancel"
        android:layout_marginTop="67dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/submitThread"
        android:layout_alignBottom="@+id/submitThread"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/threadDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thread description"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/threadName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/threadName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thread Name"

        android:singleLine="true"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>